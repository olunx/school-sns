<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.gdpu.vo">
	<!--
		private int id;
		private Student author; 
		private String title; 
		private String summary;		   
		private Set<VoteItem> items; 
		private String type; 
		private Date airTime;	
		private Date deadline;
		private Set<Student> voters;
	-->
	<class name="Vote" table="t_vote" >
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="author" column="author" />
		<property name="title" />
		<property name="summary" />
		<set name="items" cascade="all" lazy="false" order-by="id asc">
			<key column="voteId" />
			<one-to-many class="VoteItem" />
		</set>
		<property name="type" />
		<property name="scope" />
		<property name="airTime" />
		<property name="deadline" />
		<set name="voters" table="t_vote_student"  cascade="save-update" >
			<key column="voteId" />
			<many-to-many class="Student" column="studentId" />
		</set>
	</class>
</hibernate-mapping>
