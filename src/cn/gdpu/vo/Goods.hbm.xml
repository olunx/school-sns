<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.gdpu.vo">
	<!--
	private int id;
	private String name;
	private String content;
	private String image;
	private int quantity;
	private Student owner;
	private int state;
	private double value;
	private String record;
	private List<Topic> reply;
	private GoodsType goodsType;
	private String exchange;
	private int hot;
	private Date time;
	-->
	<class name="Goods" table="t_goods" >
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="name" />
		<property name="content" />
		<property name="image" />
		<property name="quantity" />
		<many-to-one name="owner" column="studentId" cascade="save-update" />
		<property name="state" />
		<property name="value" />
		<property name="record" />
		<list name="reply" cascade="all">
			<key column="goodsId" />
			<index column="indexId" />
			<one-to-many class="Topic" />
		</list>
		<many-to-one name="goodsType" column="gtId" cascade="save-update" />
		<property name="exchange" />
		<property name="hot" />
		<property name="airTime" />
	</class>
</hibernate-mapping>
