<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>SchoolSNS</display-name>
  <welcome-file-list>
    <welcome-file>login</welcome-file>
  </welcome-file-list>
  <!-- 配置CharacterEncoding 字符集 -->
  <filter>
    <filter-name>encoding</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
 	<!-- 配置取消缓存 -->
	<filter>
		<filter-name>cachefilter</filter-name>
		<filter-class>cn.gdpu.util.NoCacheFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/admin/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/course/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/attendance/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/chat/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/classfee/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/score/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/vote/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/goods/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/issue/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/school/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/classes/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/t/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/feed/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/wall/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/twitter/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/mail/*</url-pattern>  
	</filter-mapping> 
	<filter-mapping>
		<filter-name>cachefilter</filter-name>
		<url-pattern>/group/*</url-pattern>  
	</filter-mapping> 
   <!-- 配置Spring -->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:conf/spring/applicationContext.xml</param-value>
  </context-param>
  <!-- 配置hibernate3 OpenSessionInView -->
  <filter>
    <filter-name>hibernateFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
    <init-param>
      <param-name>singleSession</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>hibernateFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- 配置struts2 -->
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>struts-default.xml,
			struts-plugin.xml,
			conf/struts/struts.xml,
			</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
<!-- 配置JSON -->
    <servlet>
        <servlet-name>json</servlet-name>
        <servlet-class>servlet.Json</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>json</servlet-name>
        <url-pattern>/json</url-pattern>
    </servlet-mapping>

<!-- 配置dwr -->
	<servlet>
		<servlet-name>dwr-invoker</servlet-name>
		<servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
 		<init-param>
           <param-name>debug</param-name>
           <param-value>true</param-value>
       	</init-param>
		<init-param>
			<param-name>activeReverseAjaxEnabled</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>pollAndCometEnabled</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>dwr-invoker</servlet-name>
		<url-pattern>/dwr/*</url-pattern>
	</servlet-mapping>

  <mime-mapping>
    <extension>xls</extension>
    <mime-type>application/vnd.ms-excel</mime-type>
  </mime-mapping>
</web-app>